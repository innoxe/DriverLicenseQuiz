<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Label edit Your Name -->
    <style name="HeaderYourName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/marginTop_label_editName</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom_label_editName</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft_label_editName</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Line in Start the Quiz -->
    <style name="ViewLineStart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_start</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <!-- ViewGroup of every question -->
    <style name="QuestionViewGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft_question_group</item>
        <item name="android:layout_marginRight">@dimen/marginRight_question_group</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom_question_group</item>
        <item name="android:paddingBottom">@dimen/paddingBottom_question_group</item>
        <item name="android:background">@color/backgroundQuestion</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Questions image -->
    <style name="QuestionImage">
        <item name="android:layout_width">@dimen/width_question_image</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/padding_question_image</item>
    </style>

    <!-- LinearLayout of question -->
    <style name="QuestionChildLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Text of question -->
    <style name="QuestionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginTop_question_text</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom_question_text</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/size_question_text</item>
    </style>

    <!-- RadioButton question quiz -->
    <style name="QuestionRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_question_radioB</item>
    </style>

    <!-- EditText question quiz -->
    <style name="QuestionEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom_question_editText</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft_question_editText</item>
        <item name="android:layout_marginRight">@dimen/marginRight_question_editText</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- EditText question quiz -->
    <style name="QuestionRadioCheck">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Button -->
    <style name="ButtonApp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorTextButton</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/colorPrimary</item>
     </style>

    <!-- Header Toast -->
    <style name="ToastHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>



</resources>
